/* uView主题变量 */
:root {
  --primary:#0A84FF;
  --muted:#666;
  --card:#fff;
  --radius:24rpx;
  --shadow:0 8rpx 16rpx rgba(10,132,255,.12);
}
.page {
  min-height: 100vh;
  background: #fff;
  box-sizing: border-box;
  padding: 24rpx;
}
.glass {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.78), rgba(255, 255, 255, 0.58));
  -webkit-backdrop-filter: saturate(1.2) blur(20px);
          backdrop-filter: saturate(1.2) blur(20px);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
}
.card {
  background: var(--card);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  padding: 24rpx;
}
.row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}
.btn-primary {
  border-radius: 16rpx;
  padding: 20rpx 28rpx;
  color: #fff;
  background: linear-gradient(135deg, #5AC8FA, var(--primary));
  font-weight: 600;
  box-shadow: 0 8rpx 16rpx rgba(10, 132, 255, 0.25);
}
.text-muted {
  color: var(--muted);
}
.empty {
  color: #999;
  text-align: center;
  padding: 24rpx;
}
/* 安全阀：彻底熄灭遮罩/拦截层（防白屏/点击被拦截） */
[class*=mask], [class*=overlay], [class*=modal], [class*=loading], .white-screen, .guard, .error-boundary {
  display: none !important;
  pointer-events: none !important;
}
