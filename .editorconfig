# EditorConfig: https://EditorConfig.org

root = true

# 所有文件
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown文件
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON/YAML
[*.{json,yml,yaml}]
indent_size = 2

# Python
[*.py]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

